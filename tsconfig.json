{
   "compilerOptions": {
      "target": "ESNEXT",
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictFunctionTypes": true,
      "alwaysStrict": true,
      "rootDir": "src",
      "outDir": "dist"
   },
   "exclude": [
      "dist",
      "**/*.test.ts"
   ]
}